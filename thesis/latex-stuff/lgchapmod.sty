% A numbered chapter.

\def\@makechapterhead#1{\vspace*{10pt}%
   {\parindent 0pt
    \ifnum \c@secnumdepth >\m@ne
       \hfill %
          \fontfamily{pag}%pag, ppl
          \fontseries{\bfdefault}%
          \fontshape{\shapedefault}%
          \fontsize{3in}{3in}%
          \selectfont
          %\fontencoding{\encodingdefault}
          %\fontfamily{\sfdefault}
          %\fontseries{\seriesdefault}
          %\fontshape{\bfdefault}
          %\fontsize{20}{20}
          %\selectfont
       %\special{ps: .8 setgray}\thechapter \special{ps: 0 setgray}\par 
       \vspace*{-0.5in}
       \textcolor{myblue}{\thechapter}\hspace*{-20mm}
	   %\textcolor[rgb]{0.88,0.88,0.88}{\thechapter}\hspace*{-20mm}
       \special{ps: 0 setgray}\par 
       \vskip -0.5in
    \fi
    \LARGE\@makechapterhead@help #1\hfilneg\par 
    \nobreak \vskip 45pt\relax
   }}

% An unnumbered chapter (\chapter*{...})

\def\@makeschapterhead#1{\vspace*{10pt}%
   {\parindent 0pt
    \LARGE\@makechapterhead@help #1\hfilneg\par 
    \nobreak \vskip 40pt\relax
   }}
